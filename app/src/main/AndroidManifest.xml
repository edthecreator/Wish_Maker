<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eddelacruz.wishmaker">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/main_revised_logo_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/main_revised_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"

            >
        </activity>
        <activity android:name=".AuthenticationActivities.SignUp" >
        </activity>
        <activity android:name=".AuthenticationActivities.GetUpdate" >
        </activity>
        <activity android:name=".AuthenticationActivities.SplashScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AuthenticationActivities.Login" >
        </activity>
        <activity android:name=".AuthenticationActivities.PasswordReset" >
        </activity>

    </application>

</manifest>